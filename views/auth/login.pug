extends ../layouts/common.pug

block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST")
        .form-group
            label(for="email") Email:
            input#name(name="email", type="text" class="form-control ml-2", value=values ? values.email : "")
            .form-group
            label(for="passord") Password:
            input#password(name="password", type="password" class="form-control ml-2", value=values ? values.password : "")

        button(class="btn btn-primary ml-2") login