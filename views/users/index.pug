extends ../layouts/common.pug

block content
    h1
        span.mr-3 User
        a(href="/users/create" class="btn btn-primary mb-2") New
    .d-flex.align-items-center

        form.ml-auto(action="/users/search", method="GET", class="d-flex" )
            input(name="q", class="form-control", type="search", placeholder="Search", aria-label="Search")
            button(class="btn btn-primary ml-2", type="submit") Search

    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Action

        each user in users
            tr  
                td
                    img(src=user.avatar, width="60")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href='/users/' + user.id) View